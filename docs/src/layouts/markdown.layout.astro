---
import Layout from './layout.astro';

import { cn } from '@/utils';
import { siteTitle } from '@/globals';
import { proseClasses } from '@/ui/prose';

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} - ${siteTitle}`}>
  <article
    class={cn('ml-0 max-w-4xl py-7 duration-100 md:ml-[273px]', proseClasses)}
  >
    <slot />
  </article>
</Layout>
